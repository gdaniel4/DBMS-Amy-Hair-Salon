<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/ServiceTool/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Service Tool </a>
        </div>
            <table id = ServiceTool> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Tool ID</th> 
                    <th>Service ID</th> 
                    <th>Quantity</th>
                    <th>Unit</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.ServiceTool.forEach(function(ServiceTools) { %> 
                <tr>
                    <td><%= ServiceTools.ServiceToolID %></td>
                    <td><%= ServiceTools.ToolID %> </td>
                    <td><%= ServiceTools.ServiceID %> </td> 
                    <td><%= ServiceTools.Quantity %> </td> 
                    <td><%= ServiceTools.Unit %> </td> 
                    <td>
                    <form action = "/ServiceTool/update/<%= ServiceTools.ServiceToolID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= ServiceTools.ServiceToolID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/ServiceInclusion/delete/<%= ServiceTools.ServiceToolID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= ServiceTools.ServiceToolID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>