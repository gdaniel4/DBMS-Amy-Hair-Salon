<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file--> 
    </header> 
    <style> 
        table{
            border-collapse: collapse;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
        }
        th, td{
            padding: 3px;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
            <a href = "/Appointment/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Appointment </a>
       </div>
            <table id = Appointment> 
                <tr>
                    <th>Appointment ID</th>
                    <th>Customer ID</th>
                    <th>Employee ID</th>
                    <th>Appointment Date</th>
                    <th>Appointment Time</th>
                    <th>Add</th>
                    <th>Delete</th>
                </tr>
                <% locals.Appointment.forEach(function(Appointments) { %> 
                <tr>
                    <td><%= Appointments.AppointmentID %> </td>
                    <td><%= Appointments.CustomerID %> </td> 
                    <td><%= Appointments.EmployeeID %> </td> 
                    <td><%= Appointments.AppointmentDate %> </td>
                    <td><%= Appointments.AppointmentTime %> </td>
                    <td>
                    <form action = "/Appointment/update/<%= Appointments.AppointmentID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= Appointment.ScheduleID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/Appointment/delete/<%= Appointments.AppointmentID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= Appointment.AppointmentID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger">
                    </form>
                    </td>
                </tr>
                <% }); %>
            </table>
            <br><br>
    </main>
</body>
</html>