<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 120%;
            margin: 0px auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/Role/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Role </a>
        </div>
            <div>
            <table id = Role> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Role Title</th>
                    <th>Role Description</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.Role.forEach(function(Roles) { %> 
                <tr>
                    <td><%= Roles.RoleID %> </td>
                    <td><%= Roles.RoleTitle %> </td>
                    <td><%= Roles.RoleDescription %> </td> 
                    <td>
                        <form action = "/Role/update/<%= Roles.RoleID %>" method = "GET">
                            <input type = "hidden" name = "id" value = <%= Roles.RoleID %>> 
                            <input type = "submit" value = "Update" class = "btn btn-primary">
                        </form>
                        </td>
                        <td>
                        <form action = "/Role/delete/<%= Roles.RoleID %>" method = "GET">
                            <input type = "hidden" name = "id" value = <%= Roles.RoleID %>> 
                            <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                        </td>
                        </form>
                    
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>