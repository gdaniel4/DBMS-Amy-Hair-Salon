<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 120%;
            margin: 0px auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/Service/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Service </a>
        </div>
            <div>
            <table id = Service> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Service Name</th> 
                    <th>Type of Service</th> 
                    <th>Service Price</th>
                    <th>Service Duration</th>
                    <th>Service Description</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.Service.forEach(function(Services) { %> 
                <tr>
                    <td><%= Services.ServiceID %> </td>
                    <td><%= Services.ServiceName %> </td> 
                    <td><%= Services.TypeofService %> </td> 
                    <td><%= Services.ServicePrice %> </td> 
                    <td><%= Services.ServiceDuration %> </td> 
                    <td><%= Services.ServiceDescription %> </td> 
                    <td>
                        <form action = "/Service/update/<%= Services.ServiceID %>" method = "GET">
                            <input type = "hidden" name = "id" value = <%= Services.ServiceID %>> 
                            <input type = "submit" value = "Update" class = "btn btn-primary">
                        </form>
                        </td>
                        <td>
                        <form action = "/Service/delete/<%= Services.ServiceID %>" method = "GET">
                            <input type = "hidden" name = "id" value = <%= Services.ServiceID %>> 
                            <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                        </td>
                        </form>
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>