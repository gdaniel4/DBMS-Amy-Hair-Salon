<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 120%;
            margin: 0px auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/Skill/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Skill </a>
        </div>
            <div>
            <table id = Skill> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Skill Name</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.Skill.forEach(function(Skills) { %> 
                <tr>
                    <td><%= Skills.SkillID %> </td>
                    <td><%= Skills.SkillName %> </td> 
                    <td>
                        <form action = "/Skill/update/<%= Skills.SkillID %>" method = "GET">
                            <input type = "hidden" name = "id" value = <%= Skills.SkillID %>> 
                            <input type = "submit" value = "Update" class = "btn btn-primary">
                        </form>
                        </td>
                        <td>
                        <form action = "/Skill/delete/<%= Skills.SkillID %>" method = "GET">
                            <input type = "hidden" name = "id" value = <%= Skills.SkillID %>> 
                            <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                        </td>
                        </form>

                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>