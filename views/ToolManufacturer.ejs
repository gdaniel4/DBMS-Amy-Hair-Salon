<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/ToolManufacturer/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Tool Manufacturer </a>
        </div>
            <table id = ToolManufacturer> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Manufacturer ID</th> 
                    <th>Tool ID</th> 
                    <th>Tool Name</th>
                    <th>Tool Manufacturer Name</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.ToolManufacturer.forEach(function(ToolManufacturers) { %> 
                <tr>
                    <td><%= ToolManufacturers.ToolManufacturerID %></td>
                    <td><%= ToolManufacturers.ManufacturerID %> </td>
                    <td><%= ToolManufacturers.ToolID %> </td> 
                    <td><%= ToolManufacturers.ToolName %> </td> 
                    <td><%= ToolManufacturers.ToolManufacturerName %> </td> 
                    <td>
                    <form action = "/ToolManufacturer/update/<%= ToolManufacturers.ToolManufacturerID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= ToolManufacturers.ToolManufacturerID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/ToolManufacturer/delete/<%= ToolManufacturers.ToolManufacturerID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= ToolManufacturers.ToolManufacturerID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>