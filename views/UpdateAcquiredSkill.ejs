<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <main>
        <div style="padding: 20px; border-style: solid;">
        <form action = "/AcquiredSkill/update/<%= locals.id %>" method = "POST" class = "Add">
            <% AcquiredSkill.forEach(function(AcquiredSkills) { %>
        <br><br><br>
        <label for = "EmployeeFirstName" style="margin-left: 10%;"> Employee First Name: </label>
        <input type = "text" id = "EmployeeFirstName" name = "EmployeeFirstName" value = "<%=AcquiredSkills.EmployeeFirstName %>" >
        <label for = "EmployeeLastName" style="margin-left: 10%;"> Employee Last Name: </label>
        <input type = "text" id = "EmployeeLastName" name = "EmployeeLastName" value= "<%=AcquiredSkills.EmployeeLastName %>">
        <br><br>
        <label for = "SkillName" style="margin-left: 10%;"> Skill Name: </label>
        <select id = "SkillName" name = "SkillName"> 
            <option selected><%= AcquiredSkills.SkillName %></option>
            <% Skill.forEach(function(Skills) { %>
            <option><%= Skills.SkillName %></option>
            <% }); %>
        </select>
        <label for = "DateAcq" style="margin-left: 10%;"> Date Acquired: </label>
        <input type = "text" id = "DateAcq" name = "DateAcq" value= "<%=AcquiredSkills.DateAcq %>">
        <br><br>
        <label for = "AcqSkillInstitution" style="margin-left: 10%;"> Institution: </label>
        <input type = "text" id = "AcqSkillInstitution" name = "AcqSkillInstitution" value= "<%=AcquiredSkills.AcqSkillInstitution %>">
        <label for = "AcqSkillState" style="margin-left: 10%;"> Acquired State: </label>
        <input type = "text" id = "AcqSkillState" name = "AcqSkillState" value= "<%=AcquiredSkills.AcqSkillState %>">
            <% }); %>
            <br><br>
        <input type = "submit">
        </form>
        </div>
    </main>
</body>
</html>