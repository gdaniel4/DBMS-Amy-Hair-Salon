<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 80%;
        }
        th, td{
            padding: 3px;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/BusinessHours/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Tool </a>
        </div>
       
            <table id = Tool> 
                <tr>
                    <th>Days of Operation ID</th>
                    <th>Day Name</th> 
                    <th>Is Active</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.DaysofOperation.forEach(function(DaysofOperations) { %> 
                <tr>
                    <td><%= DaysofOperations.DaysofOperationID %> </td>
                    <td><%= DaysofOperations.DayName %> </td> 
                    <td><%= DaysofOperations.IsActive %> </td> 

                    <td>
                    <form action = "/BusinessHours/update/<%= DaysofOperations.DaysofOperationID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= DaysofOperations.DaysofOperationID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/BusinessHours/delete/<%= DaysofOperations.DaysofOperationID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= DaysofOperations.DaysofOperationID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            <br><br>
    </main>
</body>
</html>