<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 80%;
        }
        th, td{
            padding: 3px;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/EmployeeStatus/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Employee Status </a>
        </div>
       
            <table id = EmployeeStatus> 
                <tr>
                    <th>Employee Status ID</th>
                    <th>Status Description</th> 
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.EmployeeStatus.forEach(function(EmployeeStatuses) { %> 
                <tr>
                    <td><%= EmployeeStatuses.EmployeeStatusID %> </td>
                    <td><%= EmployeeStatuses.StatusDescription %> </td> 

                    <td>
                    <form action = "/EmployeeStatus/update/<%= EmployeeStatuses.EmployeeStatusID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= EmployeeStatuses.EmployeeStatusID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/EmployeeStatus/delete/<%= EmployeeStatuses.EmployeeStatusID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= EmployeeStatuses.EmployeeStatusID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            <br><br>
    </main>
</body>
</html>