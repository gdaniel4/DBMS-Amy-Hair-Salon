<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 60%;
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            padding: 3px;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/CustomerStatus/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 40%;"> Add Customer Status </a>
        </div>
       
            <table id = CustomerStatus> 
                <tr>
                    <th>Customer Status ID</th>
                    <th>Status Description</th> 
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.CustomerStatus.forEach(function(CustomerStatuses) { %> 
                <tr>
                    <td><%= CustomerStatuses.CustomerStatusID %> </td>
                    <td><%= CustomerStatuses.StatusDescription %> </td> 

                    <td>
                    <form action = "/CustomerStatus/update/<%= CustomerStatuses.CustomeStatusID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= CustomerStatuses.CustomerStatusID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/CustomerStatus/delete/<%= CustomerStatuses.CustomerStatusID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= CustomerStatuses.CustomerStatusID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            <br><br>
    </main>
</body>
</html>