<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/AppointmentService/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Appointment Service</a>
        </div>
            <table id = AppointmentService> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Appointment ID</th> 
                    <th>Service ID</th> 
                    <th>Appointment Date</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.AppointmentService.forEach(function(AppointmentServices) { %> 
                <tr>
                    <td><%= AppointmentServices.AppointmentServiceID %> </td>
                    <td><%= AppointmentServices.AppointmentID %> </td> 
                    <td><%= AppointmentServices.ServiceID %> </td> 
                    <td><%= AppointmentServices.AppointmentDate %> </td> 
                    <td>
                    <form action = "/AppointmentService/update/<%= AppointmentServices.AppointmentServiceID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= AppointmentServices.AppointmentServiceID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/AppointmentService/delete/<%= AppointmentServices.AppointmentServiceID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= AppointmentServices.AppointmentServiceID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>