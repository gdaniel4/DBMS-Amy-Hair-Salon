<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/RequiredSkill/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Required Skill </a>
        </div>
            <table id = RequiredSkills> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Service ID</th> 
                    <th>Skill ID</th> 
                    <th>Skill Name</th>
                    <th>ServiceName</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.RequiredSkill.forEach(function(RequiredSkills) { %> 
                <tr>
                    <td><%= RequiredSkills.RequiredSkillID %></td>
                    <td><%= RequiredSkills.ServiceID %></td>
                    <td><%= RequiredSkills.SkillID %> </td> 
                    <td><%= RequiredSkills.SkillName %> </td> 
                    <td><%= RequiredSkills.ServiceName %> </td> 
                    <td>
                    <form action = "/RequiredSkill/update/<%= RequiredSkills.RequiredSkillID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= RequiredSkills.RequiredSkillID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/RequiredSkill/delete/<%= RequiredSkills.RequiredSkillID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= RequiredSkills.RequiredSkillID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>