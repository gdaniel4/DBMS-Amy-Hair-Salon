<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/HairProductManufacturer/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Hair Product Manufacturer </a>
        </div>
            <table id = HairProductManufacturer> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Product ID</th> 
                    <th>Manufacturer ID</th> 
                    <th>Product Name</th>
                    <th>Hair Product Manufacturer</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.HairProductManufacturer.forEach(function(HairProductManufacturers) { %> 
                <tr>
                    <td><%= HairProductManufacturers.HairProductManufacturerID %> </td>
                    <td><%= HairProductManufacturers.ProductID %> </td>
                    <td><%= HairProductManufacturers.ManufacturerID %> </td> 
                    <td><%= HairProductManufacturers.ProductName %> </td> 
                    <td><%= HairProductManufacturers.HairProductManufacturerName %> </td> 
                    <td>
                    <form action = "/HairProductManufacturer/update/<%= HairProductManufacturers.HairProductManufacturerID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= HairProductManufacturers.HairProductManufacturerID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/HairProductManufacturer/delete/<%= HairProductManufacturers.HairProductManufacturerID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= HairProductManufacturers.HairProductManufacturerID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>