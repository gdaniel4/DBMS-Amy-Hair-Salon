<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/AcquiredSkill/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Acquired Skill </a>
        </div>
            <table id = AcquiredSkill> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Employee ID</th> 
                    <th>Skill ID</th> 
                    <th>Date Acquired</th>
                    <th>Skill Name</th>
                    <th>Institution</th>
                    <th>State Acquired</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.AcquiredSkill.forEach(function(AcquiredSkills) { %> 
                <tr>
                    <td><%= AcquiredSkills.AcquiredSkillID %></td>
                    <td><%= AcquiredSkills.EmployeeID %> </td>
                    <td><%= AcquiredSkills.SkillID %> </td> 
                    <td><%= AcquiredSkills.DateAcq %> </td> 
                    <td><%= AcquiredSkills.SkillName %> </td> 
                    <td><%= AcquiredSkills.AcqSkillInstitution %> </td> 
                    <td><%= AcquiredSkills.AcqSkillState %> </td> 
                    <td>
                    <form action = "/AcquiredSkill/update/<%= AcquiredSkills.AcquiredSkillID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= AcquiredSkills.AcquiredSkillID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/AcquiredSkill/delete/<%= AcquiredSkills.AcquiredSkillID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= AcquiredSkills.AcquiredSkillID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>