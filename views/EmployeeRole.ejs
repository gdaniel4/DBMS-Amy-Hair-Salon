<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 85%;
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/EmployeeRole/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Employee Role </a>
        </div>
            <table id = EmployeeRole> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Employee ID</th> 
                    <th>Role ID</th> 
                    <th>Year of Role</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.EmployeeRole.forEach(function(EmployeeRoles) { %> 
                <tr>
                    <td><%= EmployeeRoles.EmployeeRoleID %> </td>
                    <td><%= EmployeeRoles.EmployeeID %> </td>
                    <td><%= EmployeeRoles.RoleID %> </td> 
                    <td><%= EmployeeRoles.YearofRole %> </td> 
                    <td>
                    <form action = "/EmployeeRole/update/<%= EmployeeRoles.EmployeeRoleID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= EmployeeRoles.EmployeeRolesID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/EmployeeRole/delete/<%= EmployeeRoles.EmployeeRoleID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= EmployeeRoles.EmployeeRoleID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>