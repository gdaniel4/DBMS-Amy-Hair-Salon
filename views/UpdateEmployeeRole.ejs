<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <main>
        <div style="padding: 20px; border-style: solid;">
        <form action = "/EmployeeRole/update/<%= locals.id %>" method = "POST" class = "Add">
            <% EmployeeRole.forEach(function(EmployeeRoles) { %>
        <br><br><br>
        <label for = "EmployeeFirstName" style="margin-left: 10%;"> Employee First Name: </label>
        <input type = "text" id = "EmployeeFirstName" name = "EmployeeFirstName" value = "<%=EmployeeRoles.EmployeeFirstName %>" >
        <label for = "EmployeeLastName" style="margin-left: 10%;"> Employee Last Name: </label>
        <input type = "text" id = "EmployeeLastName" name = "EmployeeLastName" value= "<%=EmployeeRoles.EmployeeLastName %>">
        <br><br>
        <label for = "RoleTitle" style="margin-left: 10%;"> Role Title: </label>
        <input type = "text" id = "RoleTitle" name = "RoleTitle" value= "<%=EmployeeRoles.RoleTitle %>">
        <label for = "YearofRole" style="margin-left: 10%;"> Year of Role: </label>
        <input type = "text" id = "YearofRole" name = "YearofRole" value= "<%=EmployeeRoles.YearofRole %>">
            <% }); %>
            <br><br>
        <input type = "submit">
        </form>
        </div>
    </main>
</body>
</html>