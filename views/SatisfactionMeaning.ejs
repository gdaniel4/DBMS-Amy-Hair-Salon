<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 120%;
            margin: 0px auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/SatisfactionMeaning/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Satisfaction Rating Meaning </a>
        </div>
            <div>
            <table id = SatisfactionMeaning> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Appointment Satisfaction</th>
                    <th>Satisfaction Meaning</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.SatisfactionMeaning.forEach(function(SatisfactionMeanings) { %> 
                <tr>
                    <td><%= SatisfactionMeanings.SatisfactionMeaningID %> </td>
                    <td><%= SatisfactionMeanings.AppointmentSatisfaction %> </td> 
                    <td><%= SatisfactionMeanings.SatisfactionMeaning %> </td> 
                    <td>
                        <form action = "/SatisfactionMeaning/update/<%= SatisfactionMeanings.SatisfactionMeaningID %>" method = "GET">
                            <input type = "hidden" name = "id" value = <%= SatisfactionMeanings.SatisfactionMeaningID %>> 
                            <input type = "submit" value = "Update" class = "btn btn-primary">
                        </form>
                        </td>
                        <td>
                        <form action = "/SatisfactionMeaning/delete/<%= SatisfactionMeanings.SatisfactionMeaningID %>" method = "GET">
                            <input type = "hidden" name = "id" value = <%= SatisfactionMeanings.SatisfactionMeaningID %>> 
                            <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                        </td>
                        </form>

                   
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>