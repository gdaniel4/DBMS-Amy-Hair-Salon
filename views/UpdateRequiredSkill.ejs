<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <main>
        <div style="padding: 20px; border-style: solid;">
        <form action = "/RequiredSkill/update/<%= locals.id %>" method = "POST" class = "Add">
            <% RequiredSkill.forEach(function(RequiredSkills) { %>
        <br><br><br>
        <label for = "ServiceName" style="margin-left: 10%;"> Service Name: </label>
        <select id = "ServiceName" name = "ServiceName"> 
            <option selected><%= RequiredSkills.ServiceName %></option>
            <% Service.forEach(function(Services) { %>
            <option><%= Services.ServiceName %></option>
            <% }); %>
        </select>
        <label for = "SkillName" style="margin-left: 10%;"> Skill Name: </label>
        <select id = "SkillName" name = "SkillName"> 
            <option selected><%= RequiredSkills.SkillName %></option>
            <% Skill.forEach(function(Skills) { %>
            <option><%= Skills.SkillName %></option>
            <% }); %>
        </select>
        <br><br>
            <% }); %>
        <input type = "submit">
        </form>
        </div>
    </main>
</body>
</html>