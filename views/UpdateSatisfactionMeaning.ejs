<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    <style>h1 {text-align: center;}</style>
        
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <main>
        <div style="padding: 20px; border: solid; margin-top: 10%;">
        <h1>Update Satisfaction Meaning</h1>
        <br>
        <br>

        <form action = "/SatisfactionMeaning/update/<%= locals.id %>" method = "POST" class = "Update">
            <% SatisfactionMeaning.forEach(function(SatisfactionMeanings) { %>
            <label for = "AppointmentSatisfaction"> Appointment Satisfaction Rating: </label>
            <input type = "text" id = "AppointmentSatisfaction" name = "AppointmentSatisfaction" value = "<%= SatisfactionMeanings.AppointmentSatisfaction %>">
            <label for = "SatisfactionMeaning"> Meaning of Rating: </label>
            <input type = "text" id = "SatisfactionMeaning" name = "SatisfactionMeaning" value = "<%= SatisfactionMeanings.SatisfactionMeaning %>">
            <% }); %>

        <br>
        <input type = "submit" value = "Update" class = "btn btn-primary" style="margin-top: 2%;">
        </form>
        </div>
    </main>
</body>
</html>