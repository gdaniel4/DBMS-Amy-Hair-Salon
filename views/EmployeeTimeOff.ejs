<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file--> 
    </header> 
    <style> 
        table{
            border-collapse: collapse;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
        }
        th, td{
            padding: 3px;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
            <a href = "/EmployeeTimeOff/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Employee Time Off </a>
       </div>
            <table id = EmployeeTimeOff> 
                <tr>
                    <th>ID</th>
                    <th>Employee ID</th>
                    <th>Start Time Off Date</th>
                    <th>Availibility Date</th>
                    <th>Reason</th>
                    <th>Add</th>
                    <th>Delete</th>
                </tr>
                <% locals.EmployeeTimeOff.forEach(function(EmployeeTimeOffs) { %> 
                <tr>
                    <td><%= EmployeeTimeOffs.EmployeeTimeOffID %> </td>
                    <td><%= EmployeeTimeOffs.EmployeeID %> </td> 
                    <td><%= EmployeeTimeOffs.StartTimeOffDate %> </td> 
                    <td><%= EmployeeTimeOffs.AvailibilityDate %> </td>
                    <td><%= EmployeeTimeOffs.Reason %> </td>
                    <td>
                    <form action = "/EmployeeTimeOff/update/<%= EmployeeTimeOffs.EmployeeTimeOffID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= EmployeeTimeOffs.EmployeeTimeOffID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/EmployeeTimeOff/delete/<%= EmployeeTimeOffs.EmployeeTimeOffID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= EmployeeTimeOffs.EmployeeTimeOffID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger">
                    </form>
                    </td>
                </tr>
                <% }); %>
            </table>
            <br><br>
    </main>
</body>
</html>