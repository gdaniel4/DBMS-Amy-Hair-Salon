<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/Manufacturer/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Manufacturer </a>
        </div>
            <table id = Manufacturer> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>ManufacturerName</th> 
                    <th>CountryID</th>
                    <th>Manufacturer PhoneNumber</th> 
                    <th>Manufacturer Email</th>
                    <th>Update</th>
                    <th>Delete</th>
                <% locals.Manufacturer.forEach(function(Manufacturers) { %> 
                <tr>
                    <td><%= Manufacturers.ManufacturerID %></td>
                    <td><%= Manufacturers.ManufacturerName %> </td>
                    <td><%= Manufacturers.CountryID %> </td> 
                    <td><%= Manufacturers.ManufacturerPhoneNumber %> </td> 
                    <td><%= Manufacturers.ManufacturerEmail %> </td> 
                    <td>
                    <form action = "/Manufacturer/update/<%= Manufacturers.ManufacturerID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= Manufacturer.ManufacturerID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/Manufacturer/delete/<%= Manufacturers.ManufacturerID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= Manufacturers.ManufacturerID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>