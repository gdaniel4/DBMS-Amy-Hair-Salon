<html>
    <head>
        <%- include('../views/head'); %> <!--Include head file-->
    </head>
<body class = "container">
    <header>
        <%- include('../views/header'); %> <!--Include header file-->
    </header>
    <style> 
        table{
            border-collapse: collapse;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            padding: 5px;
            text-align: center;
        }
        th{
            background-color: rgb(200, 220, 255);
        }
    </style>
    <main>
        <div>
             <a href = "/HairServiceProduct/add" class = "btn btn-info" style= "margin-top: 10px; margin-bottom: 10px; margin-left: 35%;"> Add Hair Service Product </a>
        </div>
            <table id = HairServiceProduct> 
                <tr>
                    <th style="width: 50px">ID</th>
                    <th>Product ID</th> 
                    <th>Service ID</th> 
                    <th>Product Name</th>
                    <th>Quantity Used</th>
                    <th>Product Volume</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <% locals.HairServiceProduct.forEach(function(HairServiceProducts) { %> 
                <tr>
                    <td><%= HairServiceProducts.ServiceProductID %> </td>
                    <td><%= HairServiceProducts.ProductID %> </td>
                    <td><%= HairServiceProducts.ServiceID %> </td> 
                    <td><%= HairServiceProducts.ProductName %> </td> 
                    <td><%= HairServiceProducts.QuantityUsed %> </td> 
                    <td><%= HairServiceProducts.ProductVolume %> </td> 
                    <td>
                    <form action = "/HairServiceProduct/update/<%= HairServiceProducts.ServiceProductID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= HairServiceProducts.ServiceProductID %>> 
                        <input type = "submit" value = "Update" class = "btn btn-primary">
                    </form>
                    </td>
                    <td>
                    <form action = "/HairServiceProduct/delete/<%= HairServiceProducts.ServiceProductID %>" method = "GET">
                        <input type = "hidden" name = "id" value = <%= HairServiceProducts.ServiceProductID %>> 
                        <input type = "submit" value = "Delete" class = "btn btn-danger"> 
                    </td>
                    </form>
                </tr>
                <% }); %>
            </table>
            </div>
            <br><br>
    </main>
</body>
</html>